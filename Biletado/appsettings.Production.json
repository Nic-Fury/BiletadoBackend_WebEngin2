{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "ReservationsDb": "Host=postgres;Port=5432;Database=reservations_v3;Username=postgres;Password=postgres"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:9000"
      }
    }
  },
  "Services": {
    "Assets": {
      "BaseUrl": "http://assets",
      "Port": "80",
      "ReadyPath": "/api/v3/assets/health/ready",
      "RoomPath": "/api/v3/assets/rooms/{id}"
    }
  },
  "Jwt": {
    "Authority": "http://iam:8080/realms/biletado",
    "Audience": "biletado-reservations",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  }
}

